package main

import (
	"fmt"
)

func main() {
	fmt.Println("Hello, playground")
	n := factorial(4)
	factorial(4)
	fmt.Println("this is factorial n:", n)
	n2 := loopFact(4)
	fmt.Println(n2)
}

func factorial(n int) int {
	if n == 0 {
		return 1
	}
	return n * factorial(n-1)
}

func loopFact(n int) int {
	total := 1
	for ; n > 0; n-- {
		total *= n
		fmt.Println(" value of n", n, " value of total", total)
	}

	return total
}
